<header>
  <nav>
  <div class="home-pg-link-cont">
    <a href="/" class="home-pg-link">Clubhouse</a>
  </div>

  <% if (currentUser) { %>
    <a href="/new" class="nav-link">+ New Message</a>
    <!-- this next link is only for users who are not yet members -->
    <% if (!currentUser.is_member) { %>
      <a href="/become-member" class="nav-link">Become a Member</a>
    <% } else if (currentUser.is_member && !currentUser.is_admin) { %>
      <a href="/become-admin" class="nav-link">Become an Admin</a>
    <% } %>
      <p class="welcome-msg">Welcome, <%= currentUser.first_name %>!</p>
      <% if (currentUser.is_member && !currentUser.is_admin) { %>
        <span class="member-badge">ðŸŒŸ Member</span>
      <% } else if (currentUser.is_member && currentUser.is_admin) {%>
      <span class="member-badge">ðŸŒŸ Admin</span>
      <% } %>
    <a href="/logout" class="nav-link logout-btn">Logout</a>
  <% } else { %>
    <a href="/login" class="nav-link">Login</a>
    <a href="/sign-up" class="nav-link">Sign Up</a>
    <% } %>
  </nav>
</header>

